# Frontend Environment Variables (.env.local for development)
REACT_APP_API_BASE_URL=http://127.0.0.1:10000/api
REACT_APP_SOCKET_URL=http://localhost:10000
REACT_APP_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here

# For production deployment on Vercel, set these in Vercel dashboard:
# REACT_APP_API_BASE_URL=https://your-render-backend.onrender.com/api
# REACT_APP_SOCKET_URL=https://your-render-backend.onrender.com
# REACT_APP_GOOGLE_CLIENT_ID=your_production_google_client_id

# Application Settings
REACT_APP_DEBUG=true
REACT_APP_VERSION=1.0.0
REACT_APP_APP_NAME=SeaTrace

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SMS=false
REACT_APP_ENABLE_2FA=true

# Map Configuration
REACT_APP_MAP_ZOOM=4
REACT_APP_MAP_CENTER_LAT=19.0760
REACT_APP_MAP_CENTER_LNG=72.8777

# Analytics (Optional)
REACT_APP_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
